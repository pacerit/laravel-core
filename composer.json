{
    "name": "pacerit/laravel-core",
    "description": "Package of core classes that provide standardization in usage of Services, Repositories etc. for Laravel framework.",
    "type": "library",
    "keywords": [
        "pacerit",
        "laravel-core",
        "core",
        "framework",
        "laravel"
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "^1.5",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "illuminate/contracts": "^5.8",
        "illuminate/database": "^5.8",
        "illuminate/support": "^5.8",
        "illuminate/container": "^5.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "suggest": {
        "yajra/laravel-datatables-oracle": "This package is required if you want to use datatable() function in CoreRepository class implementation (only for Laravel framework)"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Wiktor Pacer",
            "email": "kontakt@pacerit.pl",
            "role": "Developer",
            "homepage": "https://pacerit.pl"
        }
    ],
    "autoload": {
        "psr-4": {
            "PacerIT\\LaravelCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PacerIT\\LaravelCore\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "PacerIT\\LaravelCore\\Providers\\LaravelCoreServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable"
}
